@model SunTech.Models.DatabaseModel.Product
@{
    Layout = "_Layout";
    ViewData["Title"] = "Product Details";
}

<div class="container py-5 fade-in-up">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white py-4">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="mb-1 fw-bold">@Model.Name</h2>
                            <span class="badge bg-light text-dark">@Model.Category</span>
                        </div>
                        <div class="text-end">
                            <h3 class="mb-0">৳@Model.Price</h3>
                            <small class="opacity-75">Per Unit</small>
                        </div>
                    </div>
                </div>

                <div class="card-body p-5">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="bg-light rounded p-4 h-100">
                                <h5 class="text-primary mb-3">
                                    <i class="fas fa-info-circle me-2"></i>Product Information
                                </h5>
                                <div class="mb-3">
                                    <strong class="text-muted">Supplier:</strong>
                                    <div class="fs-5">@Model.Supplier</div>
                                </div>
                                <div>
                                    <strong class="text-muted">Expiry Date:</strong>
                                    <div class="fs-5">@Model.ExpiryDate.ToString("MMM dd, yyyy")</div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="bg-light rounded p-4 h-100">
                                <h5 class="text-success mb-3">
                                    <i class="fas fa-warehouse me-2"></i>Stock Information
                                </h5>
                                <div class="text-center">
                                    <div class="display-4 fw-bold text-primary mb-2">@Model.Quantity</div>
                                    <span class="badge @(Model.Quantity > 10 ? "bg-success" : Model.Quantity > 0 ? "bg-warning text-dark" : "bg-danger") fs-6">
                                        @(Model.Quantity > 0 ? "In Stock" : "Out of Stock")
                                    </span>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row g-3">
                        <div class="col-md-4">
                            <a asp-action="Index" class="btn btn-outline-secondary w-100 btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Inflows" asp-action="Create" asp-route-productId="@Model.ProductId"
                               class="btn btn-success w-100 btn-lg">
                                <i class="fas fa-plus me-2"></i>Add Stock
                            </a>
                        </div>
                        <div class="col-md-4">
                            <a asp-controller="Dispatch" asp-action="Create" asp-route-productId="@Model.ProductId"
                               class="btn btn-danger w-100 btn-lg">
                                <i class="fas fa-minus me-2"></i>Dispatch
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
