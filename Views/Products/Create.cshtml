@model SunTech.Models.DatabaseModel.Product
@{
    ViewData["Title"] = "Add Product";
    Layout = "_Layout";
}

<div class="container py-5 fade-in-up">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-xl-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <h2 class="mb-0 fw-bold">
                        <i class="fas fa-plus-circle me-3"></i>Add New Product
                    </h2>
                    <p class="mb-0 opacity-75">Fill in the product details below</p>
                </div>

                <div class="card-body p-5">
                    <form asp-action="Create" method="post" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Name" class="form-label fw-semibold">
                                    <i class="fas fa-tag me-2 text-primary"></i>Product Name
                                </label>
                                <input asp-for="Name" class="form-control form-control-lg"
                                       placeholder="Enter product name" />
                                <span asp-validation-for="Name" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Category" class="form-label fw-semibold">
                                    <i class="fas fa-folder me-2 text-primary"></i>Category
                                </label>
                                <input asp-for="Category" class="form-control form-control-lg"
                                       placeholder="Enter category" />
                                <span asp-validation-for="Category" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label asp-for="Quantity" class="form-label fw-semibold">
                                    <i class="fas fa-cubes me-2 text-primary"></i>Initial Quantity
                                </label>
                                <input asp-for="Quantity" class="form-control form-control-lg"
                                       placeholder="0" type="number" min="0" />
                                <span asp-validation-for="Quantity" class="text-danger small"></span>
                            </div>

                            <div class="col-md-6 mb-4">
                                <label asp-for="Price" class="form-label fw-semibold">
                                    <i class="fas fa-dollar-sign me-2 text-primary"></i>Price (৳)
                                </label>
                                <input asp-for="Price" class="form-control form-control-lg"
                                       placeholder="0.00" type="number" step="0.01" min="0" />
                                <span asp-validation-for="Price" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Supplier" class="form-label fw-semibold">
                                <i class="fas fa-truck me-2 text-primary"></i>Supplier
                            </label>
                            <input asp-for="Supplier" class="form-control form-control-lg"
                                   placeholder="Enter supplier name" />
                            <span asp-validation-for="Supplier" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ExpiryDate" class="form-label fw-semibold">
                                <i class="fas fa-calendar-alt me-2 text-primary"></i>Expiry Date
                            </label>
                            <input asp-for="ExpiryDate" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="ExpiryDate" class="text-danger small"></span>
                            <div class="form-text">Leave blank if product doesn't expire</div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i>Cancel
                            </a>
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save me-2"></i>Add Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
