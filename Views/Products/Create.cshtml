@model SunTech.Models.DatabaseModel.Product

@{
    ViewData["Title"] = "Add Product";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --glass-bg: rgba(255, 255, 255, 0.25);
        --glass-border: rgba(255, 255, 255, 0.18);
        --shadow-light: 0 8px 32px rgba(31, 38, 135, 0.37);
        --shadow-hover: 0 15px 35px rgba(31, 38, 135, 0.4);
    }

    .form-hero {
        background: var(--primary-gradient);
        padding: 3rem 0;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

    .form-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.05)" points="0,1000 1000,0 1000,1000"/></svg>');
        pointer-events: none;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .form-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 3rem;
        box-shadow: var(--shadow-light);
        position: relative;
        overflow: hidden;
    }

    .form-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--success-gradient);
    }

    .form-section {
        margin-bottom: 2rem;
    }

    .form-section:last-of-type {
        margin-bottom: 0;
    }

    .form-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #4a5568;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.75rem;
        display: block;
    }

    .form-input {
        width: 100%;
        padding: 1rem 1.5rem;
        border: 2px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        font-size: 1rem;
        color: #2d3748;
        transition: all 0.3s ease;
        outline: none;
    }

    .form-input::placeholder {
        color: #a0aec0;
        font-style: italic;
    }

    .form-input:focus {
        border-color: rgba(102, 126, 234, 0.5);
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.15);
    }

    .form-input:valid {
        border-color: rgba(72, 187, 120, 0.5);
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 2rem;
    }

    .validation-error {
        color: #f56565;
        font-size: 0.75rem;
        font-weight: 500;
        margin-top: 0.5rem;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .submit-section {
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        gap: 1rem;
    }

    .btn-modern {
        flex: 1;
        padding: 1rem 2rem;
        border: none;
        border-radius: 16px;
        font-weight: 700;
        font-size: 0.875rem;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
    }

    .btn-primary-modern {
        background: var(--primary-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(102, 126, 234, 0.4);
    }

    .btn-primary-modern:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(102, 126, 234, 0.6);
    }

    .btn-secondary-modern {
        background: rgba(255, 255, 255, 0.1);
        color: #4a5568;
        border: 2px solid rgba(102, 126, 234, 0.2);
        backdrop-filter: blur(10px);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-secondary-modern:hover {
        background: var(--secondary-gradient);
        color: white;
        border-color: transparent;
        transform: translateY(-3px);
        text-decoration: none;
    }

    .progress-indicator {
        position: absolute;
        top: 0;
        left: 0;
        height: 4px;
        background: var(--success-gradient);
        transition: width 0.3s ease;
        border-radius: 0 2px 2px 0;
    }

    .form-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #a0aec0;
        transition: color 0.3s ease;
        pointer-events: none;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input:focus + .form-icon {
        color: #667eea;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
            gap: 1rem;
        }
        
        .form-card {
            padding: 2rem 1.5rem;
            margin: 0 1rem;
        }
        
        .submit-section {
            flex-direction: column;
        }
        
        .form-hero {
            padding: 2rem 0;
        }
    }

    .floating-elements {
        position: absolute;
        top: 50%;
        right: -100px;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, rgba(102, 126, 234, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(-20px) rotate(0deg); }
        50% { transform: translateY(20px) rotate(180deg); }
    }

    .form-steps {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
        gap: 1rem;
    }

    .step-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transition: background 0.3s ease;
    }

    .step-indicator.active {
        background: var(--success-gradient);
    }
</style>

<!-- Hero Section -->
<div class="form-hero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 text-white fw-bold mb-3">Add New Product</h1>
                <p class="lead text-white opacity-75">Expand your inventory with detailed product information</p>
            </div>
        </div>
    </div>
</div>

<div class="form-container">
    <div class="form-card">
        <div class="floating-elements"></div>
        <div class="progress-indicator" id="formProgress"></div>
        
        <!-- Progress Steps -->
        <div class="form-steps">
            <div class="step-indicator active"></div>
            <div class="step-indicator"></div>
            <div class="step-indicator"></div>
        </div>

        <form asp-action="Create" method="post" id="productForm">
            <!-- Basic Information -->
            <div class="form-section">
                <div class="input-wrapper">
                    <label asp-for="Name" class="form-label">Product Name</label>
                    <input asp-for="Name" class="form-input" placeholder="Enter a descriptive product name" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12 2C13.1 2 14 2.9 14 4C14 5.1 13.1 6 12 6C10.9 6 10 5.1 10 4C10 2.9 10.9 2 12 2ZM21 9V7L15 1H5C3.89 1 3 1.89 3 3V21C3 22.1 3.89 23 5 23H19C20.1 23 21 22.1 21 21V9H21Z"/>
                    </svg>
                    <span asp-validation-for="Name" class="validation-error"></span>
                </div>
            </div>

            <!-- Category and Supplier -->
            <div class="form-grid">
                <div class="input-wrapper">
                    <label asp-for="Category" class="form-label">Category</label>
                    <input asp-for="Category" class="form-input" placeholder="e.g., Electronics, Tools" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z"/>
                    </svg>
                    <span asp-validation-for="Category" class="validation-error"></span>
                </div>

                <div class="input-wrapper">
                    <label asp-for="Supplier" class="form-label">Supplier</label>
                    <input asp-for="Supplier" class="form-input" placeholder="Supplier company name" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12A10,10 0 0,0 12,2M7.07,18.28C7.5,17.38 10.12,16.5 12,16.5C13.88,16.5 16.5,17.38 16.93,18.28C15.57,19.36 13.86,20 12,20C10.14,20 8.43,19.36 7.07,18.28M18.36,16.83C16.93,15.09 13.46,14.5 12,14.5C10.54,14.5 7.07,15.09 5.64,16.83C4.62,15.5 4,13.82 4,12C4,7.59 7.59,4 12,4C16.41,4 20,7.59 20,12C20,13.82 19.38,15.5 18.36,16.83M12,6C10.06,6 8.5,7.56 8.5,9.5C8.5,11.44 10.06,13 12,13C13.94,13 15.5,11.44 15.5,9.5C15.5,7.56 13.94,6 12,6M12,11A1.5,1.5 0 0,1 10.5,9.5A1.5,1.5 0 0,1 12,8A1.5,1.5 0 0,1 13.5,9.5A1.5,1.5 0 0,1 12,11Z"/>
                    </svg>
                    <span asp-validation-for="Supplier" class="validation-error"></span>
                </div>
            </div>

            <!-- Quantity and Price -->
            <div class="form-grid">
                <div class="input-wrapper">
                    <label asp-for="Quantity" class="form-label">Initial Quantity</label>
                    <input asp-for="Quantity" class="form-input" placeholder="0" type="number" min="0" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M4,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M4,6V18H20V6H4Z"/>
                    </svg>
                    <span asp-validation-for="Quantity" class="validation-error"></span>
                </div>

                <div class="input-wrapper">
                    <label asp-for="Price" class="form-label">Unit Price (৳)</label>
                    <input asp-for="Price" class="form-input" placeholder="0.00" type="number" step="0.01" min="0" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M7,15H9C9,16.08 10.37,17 12,17C13.63,17 15,16.08 15,15C15,13.9 13.96,13.5 11.76,12.97C9.64,12.44 7,11.78 7,9C7,7.21 8.47,5.69 10.5,5.18V3H13.5V5.18C15.53,5.69 17,7.21 17,9H15C15,7.92 13.63,7 12,7C10.37,7 9,7.92 9,9C9,10.1 10.04,10.5 12.24,11.03C14.36,11.56 17,12.22 17,15C17,16.79 15.53,18.31 13.5,18.82V21H10.5V18.82C8.47,18.31 7,16.79 7,15Z"/>
                    </svg>
                    <span asp-validation-for="Price" class="validation-error"></span>
                </div>
            </div>

            <!-- Expiry Date -->
            <div class="form-section">
                <div class="input-wrapper">
                    <label asp-for="ExpiryDate" class="form-label">Expiry Date (Optional)</label>
                    <input asp-for="ExpiryDate" class="form-input" type="date" />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19,3H18V1H16V3H8V1H6V3H5A2,2 0 0,0 3,5V19A2,2 0 0,0 5,21H19A2,2 0 0,0 21,19V5A2,2 0 0,0 19,3M19,19H5V8H19V19Z"/>
                    </svg>
                    <span asp-validation-for="ExpiryDate" class="validation-error"></span>
                </div>
            </div>

            <!-- Submit Section -->
            <div class="submit-section">
                <a href="@Url.Action("Index", "Products")" class="btn-modern btn-secondary-modern">
                    ← Cancel
                </a>
                <button type="submit" class="btn-modern btn-primary-modern">
                    Add Product →
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('productForm');
        const inputs = form.querySelectorAll('.form-input[required]');
        const progressBar = document.getElementById('formProgress');
        const stepIndicators = document.querySelectorAll('.step-indicator');
        
        // Form progress tracking
        function updateProgress() {
            const filledInputs = Array.from(inputs).filter(input => input.value.trim() !== '');
            const progress = (filledInputs.length / inputs.length) * 100;
            progressBar.style.width = progress + '%';
            
            // Update step indicators
            const currentStep = Math.floor(progress / 33.33);
            stepIndicators.forEach((indicator, index) => {
                indicator.classList.toggle('active', index <= currentStep);
            });
        }

        // Add event listeners to all inputs
        inputs.forEach(input => {
            input.addEventListener('input', updateProgress);
            input.addEventListener('blur', updateProgress);
        });

        // Form submission with loading state
        form.addEventListener('submit', function(e) {
            const submitBtn = form.querySelector('.btn-primary-modern');
            submitBtn.textContent = 'Adding Product...';
            submitBtn.disabled = true;
        });

        // Auto-focus first input
        inputs[0]?.focus();
        
        // Initial progress update
        updateProgress();
    });
</script>
}
