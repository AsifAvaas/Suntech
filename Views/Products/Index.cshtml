@model IEnumerable<SunTech.Models.DatabaseModel.Product>
@{
    Layout = "_Layout";
    ViewData["Title"] = "Products";
}

<div class="container-fluid py-4 fade-in-up">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="text-dark fw-bold mb-0">
                <i class="fas fa-box text-primary me-3"></i>Product Inventory
            </h2>
            <p class="text-muted">Manage your product catalog and stock levels</p>
        </div>
        <div class="col-md-6 text-end">
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-plus me-2"></i>Add New Product
            </a>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-primary text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0 opacity-75">Total Products</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count()</h3>
                        </div>
                        <i class="fas fa-boxes fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0 opacity-75">In Stock</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(p => p.Quantity > 0)</h3>
                        </div>
                        <i class="fas fa-check-circle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0 opacity-75">Low Stock</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(p => p.Quantity > 0 && p.Quantity <= 10)</h3>
                        </div>
                        <i class="fas fa-exclamation-triangle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card bg-gradient-danger text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title mb-0 opacity-75">Out of Stock</h6>
                            <h3 class="mb-0 fw-bold">@Model.Count(p => p.Quantity == 0)</h3>
                        </div>
                        <i class="fas fa-times-circle fa-2x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Products Grid -->
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0 product-card">
                    <div class="card-header bg-light border-0 pb-0">
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge bg-secondary">@product.Category</span>
                            <span class="badge @(product.Quantity > 10 ? "bg-success" : product.Quantity > 0 ? "bg-warning text-dark" : "bg-danger")">
                                @(product.Quantity > 0 ? "In Stock" : "Out of Stock")
                            </span>
                        </div>
                    </div>

                    <div class="card-body">
                        <h5 class="card-title text-dark fw-bold mb-2">@product.Name</h5>
                        <div class="row text-center mb-3">
                            <div class="col-6">
                                <h4 class="text-primary mb-0">à§³@product.Price</h4>
                                <small class="text-muted">Price</small>
                            </div>
                            <div class="col-6">
                                <h4 class="text-info mb-0">@product.Quantity</h4>
                                <small class="text-muted">In Stock</small>
                            </div>
                        </div>

                        <div class="btn-group w-100 mb-2" role="group">
                            <a asp-action="Details" asp-route-id="@product.ProductId"
                               class="btn btn-outline-info">
                                <i class="fas fa-eye me-1"></i>View
                            </a>
                            <a asp-controller="Inflows" asp-action="Create" asp-route-productId="@product.ProductId"
                               class="btn btn-outline-success">
                                <i class="fas fa-plus me-1"></i>Add Stock
                            </a>
                            <a asp-controller="Dispatch" asp-action="Create" asp-route-productId="@product.ProductId"
                               class="btn btn-outline-danger">
                                <i class="fas fa-minus me-1"></i>Remove
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
