@model IEnumerable<SunTech.Models.DatabaseModel.Dispatch>
@{
    ViewData["Title"] = "Dispatch List";
    Layout = "_Layout";
}

<div class="container-fluid py-4 fade-in-up">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="text-dark fw-bold mb-0">
                <i class="fas fa-truck text-danger me-3"></i>Product Dispatches
            </h2>
            <p class="text-muted">Track all outgoing product movements</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Products" asp-action="Index" class="btn btn-danger btn-lg shadow-sm">
                <i class="fas fa-minus me-2"></i>Dispatch Products
            </a>
        </div>
    </div>

    <div class="card shadow border-0">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="bg-gradient-danger text-white">
                        <tr>
                            <th class="py-3 px-4">
                                <i class="fas fa-box me-2"></i>Product
                            </th>
                            <th class="py-3">
                                <i class="fas fa-minus-circle me-2"></i>Quantity Dispatched
                            </th>
                            <th class="py-3">
                                <i class="fas fa-calendar me-2"></i>Date Dispatched
                            </th>
                            <th class="py-3">
                                <i class="fas fa-user me-2"></i>Customer
                            </th>
                            <th class="py-3 text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dispatch in Model)
                        {
                            <tr>
                                <td class="py-4 px-4">
                                    <div class="d-flex align-items-center">
                                        <div class="bg-danger text-white rounded-circle d-flex align-items-center justify-content-center me-3"
                                             style="width: 40px; height: 40px;">
                                            <i class="fas fa-box"></i>
                                        </div>
                                        <div>
                                            <div class="fw-bold">@dispatch.Product.Name</div>
                                            <small class="text-muted">ID: @dispatch.ProductId</small>
                                        </div>
                                    </div>
                                </td>
                                <td class="py-4">
                                    <span class="badge bg-danger fs-6">-@dispatch.Quantity</span>
                                </td>
                                <td class="py-4">
                                    <div>@dispatch.DateDispatched.ToString("MMM dd, yyyy")</div>
                                    <small class="text-muted">@dispatch.DateDispatched.ToString("hh:mm tt")</small>
                                </td>
                                <td class="py-4">
                                    <span class="badge bg-info">@dispatch.CustomerId</span>
                                </td>
                                <td class="py-4 text-center">
                                    <button class="btn btn-outline-info btn-sm" title="View Details">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
