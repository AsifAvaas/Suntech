@model SunTech.Models.DatabaseModel.Dispatch

@{
    ViewData["Title"] = "Remove Product from Stock";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary">Remove Product from Stock</h2>

    <form asp-action="Create" method="post">
        <!-- Hidden product ID input -->
        <input type="hidden" asp-for="ProductId" value="@ViewBag.ProductId" />

        <div class="form-group">
            <label asp-for="Quantity" class="control-label"></label>
            <input asp-for="Quantity" class="form-control" placeholder="Enter quantity to remove" />
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CustomerId" class="control-label"></label>
            <input asp-for="CustomerId" class="form-control" placeholder="Enter customer ID (optional)" />
            <span asp-validation-for="CustomerId" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Remove from Stock</button>
    </form>
</div>
