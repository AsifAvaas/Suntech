@model SunTech.Models.DatabaseModel.Inflow

@{
    Layout = "_Layout";
}

<div class="container mt-5">
    

    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label for="ProductId" class="form-label">Product</label>
            <select asp-for="ProductId" class="form-select" required>
                <option value="">-- Select Product --</option>
                @foreach (var product in ViewBag.Products)
                {
                    <option value="@product.ProductId">@product.Name</option>
                }
            </select>
        </div>

        <div class="mb-3">
            <label for="Quantity" class="form-label">Quantity</label>
            <input asp-for="Quantity" type="number" class="form-control" required />
        </div>

        <div class="mb-3">
            <label for="SupplierId" class="form-label">Supplier ID</label>
            <input asp-for="SupplierId" type="number" class="form-control" required />
        </div>

        <button type="submit" class="btn btn-primary">Add Inflow</button>
    </form>
</div>
