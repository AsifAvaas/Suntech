@model SunTech.Models.DatabaseModel.Inflow

@{
    ViewData["Title"] = "Add Inflow";
    Layout = "_Layout";
}

<style>
    :root {
        --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        --success-gradient: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        --inflow-gradient: linear-gradient(135deg, #11998e 0%, #38ef7d 100%);
        --glass-bg: rgba(255, 255, 255, 0.25);
        --glass-border: rgba(255, 255, 255, 0.18);
        --shadow-light: 0 8px 32px rgba(31, 38, 135, 0.37);
        --shadow-hover: 0 15px 35px rgba(31, 38, 135, 0.4);
    }

    .form-hero {
        background: var(--inflow-gradient);
        padding: 3rem 0;
        margin-bottom: 3rem;
        position: relative;
        overflow: hidden;
    }

    .form-hero::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: url('data:image/svg+xml,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 1000 1000"><polygon fill="rgba(255,255,255,0.05)" points="0,1000 1000,0 1000,1000"/></svg>');
        pointer-events: none;
    }

    .form-container {
        max-width: 600px;
        margin: 0 auto;
        padding: 0 1rem;
    }

    .form-card {
        background: var(--glass-bg);
        backdrop-filter: blur(20px);
        border: 1px solid var(--glass-border);
        border-radius: 24px;
        padding: 3rem;
        box-shadow: var(--shadow-light);
        position: relative;
        overflow: hidden;
    }

    .form-card::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        height: 4px;
        background: var(--inflow-gradient);
    }

    .form-section {
        margin-bottom: 2rem;
    }

    .form-section:last-of-type {
        margin-bottom: 0;
    }

    .form-label {
        font-size: 0.875rem;
        font-weight: 600;
        color: #4a5568;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        margin-bottom: 0.75rem;
        display: block;
    }

    .form-input, .form-select {
        width: 100%;
        padding: 1rem 1.5rem;
        border: 2px solid rgba(255, 255, 255, 0.1);
        border-radius: 16px;
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        font-size: 1rem;
        color: #2d3748;
        transition: all 0.3s ease;
        outline: none;
    }

    .form-select {
        padding-right: 3rem;
        appearance: none;
        background-image: url("data:image/svg+xml,%3csvg xmlns='http://www.w3.org/2000/svg' fill='none' viewBox='0 0 20 20'%3e%3cpath stroke='%236b7280' stroke-linecap='round' stroke-linejoin='round' stroke-width='1.5' d='M6 8l4 4 4-4'/%3e%3c/svg%3e");
        background-position: right 1rem center;
        background-repeat: no-repeat;
        background-size: 1.5em 1.5em;
    }

    .form-input::placeholder {
        color: #a0aec0;
        font-style: italic;
    }

    .form-input:focus, .form-select:focus {
        border-color: rgba(17, 153, 142, 0.5);
        background: rgba(255, 255, 255, 0.2);
        transform: translateY(-2px);
        box-shadow: 0 8px 25px rgba(17, 153, 142, 0.15);
    }

    .form-input:valid, .form-select:valid {
        border-color: rgba(72, 187, 120, 0.5);
    }

    .validation-error {
        color: #f56565;
        font-size: 0.75rem;
        font-weight: 500;
        margin-top: 0.5rem;
        display: block;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .submit-section {
        padding-top: 2rem;
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        display: flex;
        gap: 1rem;
    }

    .btn-modern {
        flex: 1;
        padding: 1rem 2rem;
        border: none;
        border-radius: 16px;
        font-weight: 700;
        font-size: 0.875rem;
        text-decoration: none;
        text-align: center;
        transition: all 0.3s ease;
        position: relative;
        overflow: hidden;
        text-transform: uppercase;
        letter-spacing: 1px;
        cursor: pointer;
    }

    .btn-inflow-modern {
        background: var(--inflow-gradient);
        color: white;
        box-shadow: 0 4px 15px rgba(17, 153, 142, 0.4);
    }

    .btn-inflow-modern:hover {
        transform: translateY(-3px);
        box-shadow: 0 8px 25px rgba(17, 153, 142, 0.6);
    }

    .btn-secondary-modern {
        background: rgba(255, 255, 255, 0.1);
        color: #4a5568;
        border: 2px solid rgba(17, 153, 142, 0.2);
        backdrop-filter: blur(10px);
        text-decoration: none;
        display: inline-flex;
        align-items: center;
        justify-content: center;
    }

    .btn-secondary-modern:hover {
        background: var(--secondary-gradient);
        color: white;
        border-color: transparent;
        transform: translateY(-3px);
        text-decoration: none;
    }

    .progress-indicator {
        position: absolute;
        top: 0;
        left: 0;
        height: 4px;
        background: var(--inflow-gradient);
        transition: width 0.3s ease;
        border-radius: 0 2px 2px 0;
    }

    .form-icon {
        position: absolute;
        right: 1rem;
        top: 50%;
        transform: translateY(-50%);
        color: #a0aec0;
        transition: color 0.3s ease;
        pointer-events: none;
    }

    .input-wrapper {
        position: relative;
    }

    .form-input:focus + .form-icon,
    .form-select:focus + .form-icon {
        color: #11998e;
    }

    .info-badge {
        display: inline-flex;
        align-items: center;
        padding: 0.5rem 1rem;
        background: rgba(17, 153, 142, 0.1);
        border: 1px solid rgba(17, 153, 142, 0.2);
        border-radius: 12px;
        font-size: 0.875rem;
        color: #11998e;
        margin-bottom: 2rem;
        font-weight: 500;
    }

    .info-badge svg {
        margin-right: 0.5rem;
        width: 16px;
        height: 16px;
    }

    @@media (max-width: 768px) {
        .form-card {
            padding: 2rem 1.5rem;
            margin: 0 1rem;
        }
        
        .submit-section {
            flex-direction: column;
        }
        
        .form-hero {
            padding: 2rem 0;
        }
    }

    .floating-elements {
        position: absolute;
        top: 50%;
        right: -100px;
        width: 200px;
        height: 200px;
        background: radial-gradient(circle, rgba(17, 153, 142, 0.1) 0%, transparent 70%);
        border-radius: 50%;
        animation: float 6s ease-in-out infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(-20px) rotate(0deg); }
        50% { transform: translateY(20px) rotate(180deg); }
    }

    .form-steps {
        display: flex;
        justify-content: center;
        margin-bottom: 2rem;
        gap: 1rem;
    }

    .step-indicator {
        width: 12px;
        height: 12px;
        border-radius: 50%;
        background: rgba(255, 255, 255, 0.3);
        transition: background 0.3s ease;
    }

    .step-indicator.active {
        background: var(--inflow-gradient);
    }
</style>

<!-- Hero Section -->
<div class="form-hero">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h1 class="display-5 text-white fw-bold mb-3">Add Stock Inflow</h1>
                <p class="lead text-white opacity-75">Increase product inventory with detailed tracking</p>
            </div>
        </div>
    </div>
</div>

<div class="form-container">
    <div class="form-card">
        <div class="floating-elements"></div>
        <div class="progress-indicator" id="formProgress"></div>
        
        <!-- Info Badge -->
        <div class="info-badge">
            <svg viewBox="0 0 24 24" fill="currentColor">
                <path d="M12,2A10,10 0 0,1 22,12A10,10 0 0,1 12,22A10,10 0 0,1 2,12A10,10 0 0,1 12,2M12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20A8,8 0 0,0 20,12A8,8 0 0,0 12,4M11,16.5L6.5,12L7.91,10.59L11,13.67L16.59,8.09L18,9.5L11,16.5Z"/>
            </svg>
            Adding stock will increase the selected product's inventory quantity
        </div>
        
        <!-- Progress Steps -->
        <div class="form-steps">
            <div class="step-indicator active"></div>
            <div class="step-indicator"></div>
            <div class="step-indicator"></div>
        </div>

        <form asp-action="Create" method="post" id="inflowForm">
            <!-- Product Selection -->
            <div class="form-section">
                <div class="input-wrapper">
                    <label asp-for="ProductId" class="form-label">Select Product</label>
                    <select asp-for="ProductId" class="form-select" required>
                        <option value="">Choose a product to restock</option>
                        @foreach (var product in ViewBag.Products as List<SunTech.Models.DatabaseModel.Product>)
                        {
                            <option value="@product.ProductId">@product.Name (@product.Category)</option>
                        }
                    </select>
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M4,4H20A2,2 0 0,1 22,6V18A2,2 0 0,1 20,20H4A2,2 0 0,1 2,18V6A2,2 0 0,1 4,4M4,6V18H20V6H4Z"/>
                    </svg>
                    <span asp-validation-for="ProductId" class="validation-error"></span>
                </div>
            </div>

            <!-- Quantity to Add -->
            <div class="form-section">
                <div class="input-wrapper">
                    <label asp-for="Quantity" class="form-label">Quantity to Add</label>
                    <input asp-for="Quantity" class="form-input" placeholder="Enter quantity to add to stock" type="number" min="1" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M19,13H13V19H11V13H5V11H11V5H13V11H19V13Z"/>
                    </svg>
                    <span asp-validation-for="Quantity" class="validation-error"></span>
                </div>
            </div>

            <!-- Supplier Information -->
            <div class="form-section">
                <div class="input-wrapper">
                    <label asp-for="SupplierId" class="form-label">Supplier Reference</label>
                    <input asp-for="SupplierId" class="form-input" placeholder="Supplier name or reference ID" required />
                    <svg class="form-icon" width="16" height="16" viewBox="0 0 24 24" fill="currentColor">
                        <path d="M17,18C15.89,18 15,18.89 15,20A2,2 0 0,0 17,22A2,2 0 0,0 19,20C19,18.89 18.1,18 17,18M1,2V4H3L6.6,11.59L5.24,14.04C5.09,14.32 5,14.65 5,15A2,2 0 0,0 7,17H19V15H7.42A0.25,0.25 0 0,1 7.17,14.75C7.17,14.7 7.18,14.66 7.2,14.63L8.1,13H15.55C16.3,13 16.96,12.58 17.3,11.97L20.88,5H5.21L4.27,2H1M7,18C5.89,18 5,18.89 5,20A2,2 0 0,0 7,22A2,2 0 0,0 9,20C9,18.89 8.1,18 7,18Z"/>
                    </svg>
                    <span asp-validation-for="SupplierId" class="validation-error"></span>
                </div>
            </div>

            <!-- Submit Section -->
            <div class="submit-section">
                <a href="@Url.Action("Index", "Products")" class="btn-modern btn-secondary-modern">
                    ← Back to Products
                </a>
                <button type="submit" class="btn-modern btn-inflow-modern">
                    Add to Stock →
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const form = document.getElementById('inflowForm');
        const inputs = form.querySelectorAll('.form-input[required], .form-select[required]');
        const progressBar = document.getElementById('formProgress');
        const stepIndicators = document.querySelectorAll('.step-indicator');
        
        // Form progress tracking
        function updateProgress() {
            const filledInputs = Array.from(inputs).filter(input => {
                if (input.tagName === 'SELECT') {
                    return input.value !== '';
                }
                return input.value.trim() !== '';
            });
            
            const progress = (filledInputs.length / inputs.length) * 100;
            progressBar.style.width = progress + '%';
            
            // Update step indicators
            const currentStep = Math.floor(progress / 33.33);
            stepIndicators.forEach((indicator, index) => {
                indicator.classList.toggle('active', index <= currentStep);
            });
        }

        // Add event listeners to all inputs
        inputs.forEach(input => {
            input.addEventListener('input', updateProgress);
            input.addEventListener('change', updateProgress);
            input.addEventListener('blur', updateProgress);
        });

        // Form submission with loading state
        form.addEventListener('submit', function(e) {
            const submitBtn = form.querySelector('.btn-inflow-modern');
            submitBtn.textContent = 'Adding Stock...';
            submitBtn.disabled = true;
        });

        // Auto-focus first input (select)
        inputs[0]?.focus();
        
        // Initial progress update
        updateProgress();
        
        // Enhanced product selection with search-like behavior
        const productSelect = document.getElementById('ProductId');
        if (productSelect) {
            productSelect.addEventListener('change', function() {
                if (this.value) {
                    // Add visual feedback when product is selected
                    this.style.borderColor = 'rgba(17, 153, 142, 0.5)';
                }
            });
        }
    });
</script>
}
