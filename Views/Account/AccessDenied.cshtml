@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="access-denied-container">
    <div class="container-fluid min-vh-100">
        <div class="row min-vh-100 g-0">
            <!-- Left Side - Visual Elements -->
            <div class="col-lg-5 d-none d-lg-flex access-denied-visual-side">
                <div class="d-flex align-items-center justify-content-center w-100 text-white position-relative">
                    <div class="access-denied-content text-center">
                        <!-- Animated Background Elements -->
                        <div class="floating-elements">
                            <div class="floating-element"></div>
                            <div class="floating-element"></div>
                            <div class="floating-element"></div>
                        </div>

                        <div class="security-illustration mb-4">
                            <div class="shield-container">
                                <i class="fas fa-shield-alt fa-6x text-warning pulse-animation"></i>
                                <div class="shield-glow"></div>
                            </div>
                            <h2 class="fw-bold mt-4 mb-3">
                                <span class="text-warning">Secure</span><span class="text-white"> Access</span>
                            </h2>
                            <p class="lead opacity-75 mb-4">Your security is our priority</p>
                        </div>

                        <div class="security-features">
                            <div class="feature-item mb-3 slide-in-left">
                                <i class="fas fa-lock me-3 text-warning"></i>
                                <span>Enterprise-grade Security</span>
                            </div>
                            <div class="feature-item mb-3 slide-in-left" style="animation-delay: 0.2s;">
                                <i class="fas fa-user-shield me-3 text-warning"></i>
                                <span>Role-based Access Control</span>
                            </div>
                            <div class="feature-item mb-3 slide-in-left" style="animation-delay: 0.4s;">
                                <i class="fas fa-eye me-3 text-warning"></i>
                                <span>Activity Monitoring</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Access Denied Content -->
            <div class="col-lg-7 d-flex access-denied-content-side">
                <div class="access-denied-content-container d-flex align-items-center justify-content-center w-100 p-4">
                    <div class="w-100" style="max-width: 500px;">
                        <!-- Mobile Logo -->
                        <div class="d-lg-none text-center mb-4">
                            <i class="fas fa-sun fa-3x text-warning mb-2"></i>
                            <h2 class="fw-bold mb-0">
                                <span class="text-primary">Sun</span><span class="text-dark">Tech</span>
                            </h2>
                        </div>

                        <!-- Main Content Card -->
                        <div class="card shadow-lg border-0 access-denied-card">
                            <div class="card-body p-5 text-center">
                                <!-- Icon and Status -->
                                <div class="access-denied-icon mb-4">
                                    <div class="icon-wrapper">
                                        <i class="fas fa-shield-alt"></i>
                                        <i class="fas fa-exclamation-triangle warning-overlay"></i>
                                    </div>
                                </div>

                                <!-- Error Code -->
                                <div class="error-code mb-3">
                                    <span class="badge bg-danger-subtle text-danger px-3 py-2">
                                        <i class="fas fa-ban me-2"></i>403 - Access Denied
                                    </span>
                                </div>

                                <!-- Main Message -->
                                <h2 class="card-title mb-3 text-dark">Access Restricted</h2>
                                <p class="card-text text-muted mb-4 lead">
                                    You don't have the required permissions to access this resource.
                                    This incident has been logged for security purposes.
                                </p>

                                <!-- Additional Information -->
                                <div class="access-info mb-4">
                                    <div class="row g-3 text-start">
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <i class="fas fa-user me-2 text-primary"></i>
                                                <small class="text-muted">
                                                    User: <strong>@(User.Identity.IsAuthenticated? User.Identity.Name : "Guest")</strong>
                                                </small>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="info-item">
                                                <i class="fas fa-clock me-2 text-primary"></i>
                                                <small class="text-muted">
                                                    Time: <strong>@DateTime.Now.ToString("HH:mm:ss")</strong>
                                                </small>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Action Buttons -->
                                <div class="action-buttons">
                                    <div class="row g-2 mb-4">
                                        <div class="col-md-6">
                                            <a href="@Url.Action("Index", "Home")" class="btn btn-primary w-100 btn-lg">
                                                <i class="fas fa-home me-2"></i>Go to Dashboard
                                            </a>
                                        </div>
                                        <div class="col-md-6">
                                            <button onclick="history.back()" class="btn btn-outline-secondary w-100 btn-lg">
                                                <i class="fas fa-arrow-left me-2"></i>Go Back
                                            </button>
                                        </div>
                                    </div>

                                    <!-- Additional Actions -->
                                    <div class="additional-actions">
                                        <p class="text-muted mb-3">Need help?</p>
                                        <div class="d-flex justify-content-center gap-3 flex-wrap">
                                            <a href="#" class="btn btn-outline-info btn-sm" data-bs-toggle="modal" data-bs-target="#contactModal">
                                                <i class="fas fa-envelope me-1"></i>Contact Support
                                            </a>
                                            <a href="#" class="btn btn-outline-warning btn-sm">
                                                <i class="fas fa-question-circle me-1"></i>Help Center
                                            </a>
                                            @if (User.Identity.IsAuthenticated)
                                            {
                                                <form asp-action="Logout" asp-controller="Account" method="post" class="d-inline">
                                                    <button type="submit" class="btn btn-outline-danger btn-sm">
                                                        <i class="fas fa-sign-out-alt me-1"></i>Logout
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("Login", "Account")" class="btn btn-outline-success btn-sm">
                                                    <i class="fas fa-sign-in-alt me-1"></i>Login
                                                </a>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Security Notice -->
                        <div class="security-notice mt-4">
                            <div class="alert alert-warning d-flex align-items-center" role="alert">
                                <i class="fas fa-info-circle me-2"></i>
                                <small>
                                    If you believe you should have access to this resource, please contact your system administrator.
                                    All access attempts are monitored and logged.
                                </small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Contact Support Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="contactModalLabel">
                    <i class="fas fa-headset me-2"></i>Contact Support
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="contact-options">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="contact-item p-3 border rounded text-center">
                                <i class="fas fa-envelope fa-2x text-primary mb-2"></i>
                                <h6>Email Support</h6>
                                <p class="text-muted small mb-2">support@suntech.com</p>
                                <small class="text-muted">Response within 24 hours</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="contact-item p-3 border rounded text-center">
                                <i class="fas fa-phone fa-2x text-success mb-2"></i>
                                <h6>Phone Support</h6>
                                <p class="text-muted small mb-2">+880-123-456789</p>
                                <small class="text-muted">Mon-Fri, 9AM-6PM</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add animation on page load
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.access-denied-content-container').classList.add('fade-in-up');

            // Auto-redirect after 30 seconds (optional)
            setTimeout(function() {
                if (confirm('Would you like to return to the dashboard?')) {
                    window.location.href = '@Url.Action("Index", "Home")';
                }
            }, 30000);
        });
    </script>
}
