@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 text-center" style="border-radius: 15px;">
                <div class="card-body p-5">
                    <div class="mb-4">
                        <i class="fas fa-shield-alt" style="font-size: 4rem; color: var(--primary-color);"></i>
                    </div>

                    <h2 class="card-title mb-3" style="color: var(--dark-color);">Access Denied</h2>

                    <p class="card-text text-muted mb-4">
                        Sorry, you don't have permission to access this resource.
                        Please contact your administrator if you believe this is an error.
                    </p>

                    <div class="d-flex justify-content-center gap-3">
                        <a href="@Url.Action("Index", "Home")" class="btn btn-custom">
                            <i class="fas fa-home me-2"></i>Go to Dashboard
                        </a>
                        <a href="javascript:history.back()" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Go Back
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>