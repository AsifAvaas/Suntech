@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

<div class="auth-container">
    <div class="container-fluid min-vh-100">
        <div class="row min-vh-100 g-0">
            <!-- Left Side - Branding -->
            <div class="col-lg-6 d-none d-lg-flex auth-brand-side">
                <div class="d-flex align-items-center justify-content-center w-100 text-white position-relative">
                    <div class="auth-brand-content text-center">
                        <!-- Animated Background Elements -->
                        <div class="floating-elements">
                            <div class="floating-element"></div>
                            <div class="floating-element"></div>
                            <div class="floating-element"></div>
                        </div>

                        <div class="brand-logo mb-4">
                            <i class="fas fa-sun fa-5x text-warning mb-3 pulse-animation"></i>
                            <h1 class="fw-bold display-4 mb-3">
                                <span class="text-warning">Sun</span><span class="text-white">Tech</span>
                            </h1>
                            <p class="lead opacity-75 mb-4">Advanced Inventory Management System</p>
                        </div>

                        <div class="feature-list">
                            <div class="feature-item mb-3 slide-in-left">
                                <i class="fas fa-chart-line me-3 text-warning"></i>
                                <span>Real-time Analytics & Insights</span>
                            </div>
                            <div class="feature-item mb-3 slide-in-left" style="animation-delay: 0.2s;">
                                <i class="fas fa-shield-alt me-3 text-warning"></i>
                                <span>Enterprise-grade Security</span>
                            </div>
                            <div class="feature-item mb-3 slide-in-left" style="animation-delay: 0.4s;">
                                <i class="fas fa-cloud me-3 text-warning"></i>
                                <span>Cloud-based Infrastructure</span>
                            </div>
                            <div class="feature-item mb-3 slide-in-left" style="animation-delay: 0.6s;">
                                <i class="fas fa-mobile-alt me-3 text-warning"></i>
                                <span>Mobile-responsive Design</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Side - Login Form -->
            <div class="col-lg-6 d-flex auth-form-side">
                <div class="auth-form-container d-flex align-items-center justify-content-center w-100 p-4">
                    <div class="w-100" style="max-width: 400px;">
                        <!-- Mobile Logo -->
                        <div class="d-lg-none text-center mb-4">
                            <i class="fas fa-sun fa-3x text-warning mb-2"></i>
                            <h2 class="fw-bold mb-0">
                                <span class="text-primary">Sun</span><span class="text-dark">Tech</span>
                            </h2>
                        </div>

                        <!-- Welcome Header -->
                        <div class="text-center mb-4">
                            <h3 class="fw-bold text-dark mb-2">Welcome Back!</h3>
                            <p class="text-muted">Sign in to your SunTech account</p>
                        </div>

                        <!-- Login Form -->
                        <form asp-action="Login" method="post" class="auth-form">
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                            <!-- Email Input -->
                            <div class="form-floating mb-3">
                                <input asp-for="Email" class="form-control form-control-auth" type="email" placeholder="name@example.com" />
                                <label asp-for="Email" class="form-label-auth">
                                    <i class="fas fa-envelope me-2"></i>Email Address
                                </label>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>

                            <!-- Password Input -->
                            <div class="form-floating mb-3">
                                <input asp-for="Password" class="form-control form-control-auth" type="password" id="passwordInput" placeholder="Password" />
                                <label asp-for="Password" class="form-label-auth">
                                    <i class="fas fa-lock me-2"></i>Password
                                </label>
                                <button type="button" class="btn-password-toggle" onclick="toggleLoginPassword()">
                                    <i class="fas fa-eye" id="passwordToggleIcon"></i>
                                </button>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>

                            <!-- Remember Me & Forgot Password -->
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <div class="form-check">
                                    <input asp-for="RememberMe" class="form-check-input custom-checkbox" type="checkbox" />
                                    <label asp-for="RememberMe" class="form-check-label text-muted">
                                        Remember me
                                    </label>
                                </div>
                                <a href="#" class="auth-link text-decoration-none">
                                    Forgot Password?
                                </a>
                            </div>

                            <!-- Submit Button -->
                            <div class="d-grid mb-4">
                                <button type="submit" class="btn btn-auth-primary btn-lg">
                                    <i class="fas fa-sign-in-alt me-2"></i>
                                    Sign In
                                </button>
                            </div>

                            <!-- Divider -->
                            <div class="auth-divider mb-4">
                                <span>or continue with</span>
                            </div>

                            <!-- Social Login -->
                            <div class="row g-2 mb-4">
                                <div class="col">
                                    <button type="button" class="btn btn-social w-100">
                                        <i class="fab fa-google"></i>
                                    </button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-social w-100">
                                        <i class="fab fa-microsoft"></i>
                                    </button>
                                </div>
                                <div class="col">
                                    <button type="button" class="btn btn-social w-100">
                                        <i class="fab fa-github"></i>
                                    </button>
                                </div>
                            </div>

                            <!-- Sign Up Link -->
                            <div class="text-center">
                                <p class="text-muted mb-0">
                                    Don't have an account?
                                    <a href="@Url.Action("Register", "Account")" class="auth-link text-decoration-none fw-semibold">
                                        Create one here
                                    </a>
                                </p>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        function toggleLoginPassword() {
            const passwordInput = document.getElementById('passwordInput');
            const toggleIcon = document.getElementById('passwordToggleIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                toggleIcon.classList.remove('fa-eye');
                toggleIcon.classList.add('fa-eye-slash');
            } else {
                passwordInput.type = 'password';
                toggleIcon.classList.remove('fa-eye-slash');
                toggleIcon.classList.add('fa-eye');
            }
        }

        // Add form animation on load
        document.addEventListener('DOMContentLoaded', function() {
            document.querySelector('.auth-form-container').classList.add('fade-in-up');
        });
    </script>
}
